def ver_catalogo():
    print("\nðŸŽ® CatÃ¡logo de Jogos Modernos:")
    for i, jogo in enumerate(jogos, 1):
        print(f"{i}. {jogo['nome']} - R$ {jogo['preÃ§o']:.2f}")
    print("0. Voltar")

    while True:
        escolha = input("Digite o nÃºmero do jogo para adicionar ao carrinho ou 0 para voltar: ").strip()
        if escolha == "0":
            break
        if escolha.isdigit() and 1 <= int(escolha) <= len(jogos):
            index = int(escolha) - 1
            adicionar_ao_carrinho(jogos[index])
        else:
            print("âŒ OpÃ§Ã£o invÃ¡lida.")

def adicionar_ao_carrinho(jogo):
    nome = jogo['nome']
    if nome in carrinho:
        carrinho[nome]['quantidade'] += 1
    else:
        carrinho[nome] = {'preÃ§o': jogo['preÃ§o'], 'quantidade': 1}
    print(f"âœ… '{nome}' adicionado ao carrinho. Quantidade: {carrinho[nome]['quantidade']}")
